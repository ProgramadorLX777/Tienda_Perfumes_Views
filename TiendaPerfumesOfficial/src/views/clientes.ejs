                                <option>Rancagua</option>
                                <option>Graneros</option>
                                <option>Talca</option>
                                <option>Curicó</option>
                                <option>Chillán</option>
                                <option>Quillón</option>
                                <option>Concepción</option>
                                <option>Talcahuano</option>
                                <option>Temuco</option>
                                <option>Villarrica</option>
                                <option>Valdivia</option>
                                <option>Río Bueno</option>
                                <option>Puerto Montt</option>
                                <option>Osorno</option>
                                <option>Coyhaique</option>
                                <option>Puerto Aysén</option>
                                <option>Punta Arenas</option>
                                <option>Puerto Natales</option>
                            
                            </select>
                            <div class="invalid-feedback">Please select a valid state.</div>
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom01" class="form-label">Villa o pasaje cliente: </label>
                            <input type="text" class="form-control" id="validationCustom01" placeholder="Ejemplo: Los álamos" name="txt_villa_pasaje_cliente" required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom02" class="form-label">Número casa o departamento cliente: </label>
                            <input type="text" class="form-control" id="validationCustom02" placeholder="Ejemplo: 6495" name="txt_numero_casa_departamento_cliente" required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom02" class="form-label">Fono cliente: </label>
                            <input type="text" class="form-control" id="validationCustom02" placeholder="Ejemplo: +56948621205" name="txt_fono_cliente" required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Agregar Cliente</button>
                        </div>
                    </form>
